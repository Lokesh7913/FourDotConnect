                <Label alignment="CENTER" prefHeight="17.0" prefWidth="228.0" text="Turn">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Label>
                <Region prefHeight="259.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
            </children>
        </VBox>
    </children>
